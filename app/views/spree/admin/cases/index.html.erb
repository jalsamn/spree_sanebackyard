<p id="notice"><%= notice %></p>

<h1>Listing Spree Cases</h1>

<table>
  <thead>
    <tr>
      <th>Variant</th>
      <th>Receivedate</th>
      <th>Expirationdate</th>
      <th>Unitpercase</th>
      <th>Vendor</th>
      <th>Cost</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spree_cases.each do |spree_case| %>
      <tr>
        <td><%= spree_case.variant %></td>
        <td><%= spree_case.receivedate %></td>
        <td><%= spree_case.expirationdate %></td>
        <td><%= spree_case.unitpercase %></td>
        <td><%= spree_case.vendor %></td>
        <td><%= spree_case.cost %></td>
        <td><%= spree_case.location %></td>
        <td><%= link_to 'Show', spree_case %></td>
        <td><%= link_to 'Edit', edit_spree_case_path(spree_case) %></td>
        <td><%= link_to 'Destroy', spree_case, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

